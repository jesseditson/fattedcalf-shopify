.wrapper {
  max-width: 100%; }

.site-header {
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  z-index: 100;
  height: 80px; }

.header-logo img {
  width: 80px; }

.nav-bar {
  background-color: rgba(255, 255, 255, 0.6);
  height: 100%; }
  .nav-bar .site-nav {
    padding-top: 0.5em;
    display: flex;
    justify-content: space-between;
    align-items: flex-start; }
    .nav-bar .site-nav .header-logo-wrapper {
      display: flex;
      justify-content: center; }
    .nav-bar .site-nav .subnav {
      display: flex;
      margin: 0px;
      line-height: 0.8em;
      justify-content: space-between;
      height: 0px;
      overflow: hidden;
      transition: all 150ms ease-out; }
      .nav-bar .site-nav .subnav > li {
        margin: 0 5px; }
      .nav-bar .site-nav .subnav a {
        font-size: 0.8em; }
    .nav-bar .site-nav > li {
      width: 180px; }
    .nav-bar .site-nav .nav-hover .subnav {
      height: auto;
      margin-top: 15px; }
    .nav-bar .site-nav .nav-item {
      height: 60px;
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: center;
      position: relative; }
      .nav-bar .site-nav .nav-item a {
        width: 100%;
        line-height: normal;
        padding: 0px; }
